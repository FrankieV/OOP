#include "GesioneHotel.cpp"

GesioneHotel::GesioneHotel(){}

void GesioneHotel::inserisciPrenotazione()
{
	Prenotazione p;
	string a;
	cout << endl;

	cout << "Inserisci il nome del cliente: " << endl;
	cin >> a;
	p.setNomeClientePrenotazione(a);
	cout << endl;

	cout << "Inserisci il cognome del cliente: " << endl;
	cin >> a;
	p.setCognomeClientePrenotazione(a);
	cout << endl;

	cout << "Inserisci il numero della carta di credito: " << endl;
	cin >> a;
	p.setNumeroCartaDiCredito( a );
	cout << endl;
	
	cout << "Inserisci il tipo di camera che vuoi prenotare( singola, doppia, tripla )" << endl;
	cin >> a;
	p.setNumeroCamera( a );
	cout << endl;
	
	prenotazioni.push_back(p);	
}

void GestioneHotel::eliminaPrenotazione()
{
	int num;
	
	cout << "Per eliminare una prenotazione devi inserire il numero della camera: " << endl;
	cin >> num;
}
